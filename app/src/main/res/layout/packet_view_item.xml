<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/packet_view_item_layout"
android:layout_width="match_parent"
android:layout_height="?android:attr/listPreferredItemHeightLarge"
android:background="@drawable/border">
<ImageView
    android:id="@+id/packet_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:contentDescription="Icon" />

    <TextView
        android:id="@+id/packet_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/packet_icon"
        android:layout_toRightOf="@id/packet_icon"
        android:gravity="center_vertical"
        android:paddingTop="10sp"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="16sp" />
<TextView
    android:id="@+id/packet_content"
    android:layout_width="wrap_content"
    android:text="Content"
    android:layout_height="match_parent"
    android:layout_toEndOf="@id/packet_icon"
    android:layout_toRightOf="@id/packet_icon"
    android:gravity="center_vertical"
    android:textSize="12sp"/>

    <TextView
        android:id="@+id/packet_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/packet_icon"
        android:layout_toRightOf="@id/packet_icon"
        android:gravity="right"
        android:paddingTop="60sp"
        android:paddingRight="10sp"
        android:text="Status"
        android:textSize="12sp" />

</RelativeLayout>